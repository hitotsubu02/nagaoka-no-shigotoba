<h3 class="my-5"><%= announcement.title %></h3>

<div class="my-3 w-100">
  <% if announcement.thumbnail.representable? %>
  <%= image_tag announcement.thumbnail.representation(resize_to_limit: [800, 800]), class: 'w-100' %>
  <% else %>
  <%= image_tag "no_image.png", class: 'w-100' %>
  <% end %>
</div>

<p>作成日: <%= l announcement.created_at, format: :ymd %></p>
<p>
  <td><%= announcement.contents %></td>
</p>
