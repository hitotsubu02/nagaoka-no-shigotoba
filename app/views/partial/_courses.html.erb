<div style="max-width: 1000px; margin: 0 auto;">
  <div class="list-group list-group-flush">
    <% courses.each do |course| %>
    <div class="list-group-item card">
      <div class="row">
        <div class="col-md-4">
          <% if course.thumbnail.representable? %>
          <%= link_to image_tag(course.thumbnail.representation(resize_to_limit: [800, 800]), class: "object-fit-cover w-100"), course, class: "ratio-16x9" %>
          <% else %>
          <%= link_to image_tag("no_image.png", class: 'object-fit-cover w-100'), course, class: "ratio-16x9" %>
          <% end %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <div class="d-flex gap-2 align-items-start">
              <h5 class="card-title"><%= link_to course.title, course, class: 'link-primary' %></h5>
              <span class="badge" style="margin-top: 2px; background-color: <%= course.course_category.bg_color %>;"><%= course.course_category.name %></span>
            </div>
            <p class="card-text">開催日: <%= l course.event_date %></p>
            <p class="card-text">参加方法: <%= course.course_attendance_type.name %></p>
            <p class="card-text"><%= course.description %></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
