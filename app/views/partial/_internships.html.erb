<div class="">
  <div class="list-group list-group-flush shadow-md">
    <% internships.each do |internship| %>
    <div class="list-group-item bg-white flex">
      <div class="flex-1 py-4">
        <% if internship.gif_url.present? %>
        <%= link_to image_tag(internship.gif_url, class: "w-100"), internship %>
        <% elsif internship.thumbnail.representable? %>
        <%= link_to image_tag(internship.thumbnail.representation(resize_to_limit: [800, 800]), class: "w-100"), internship %>
        <% else %>
        <%= link_to image_tag("no_image.png", class: "w-100"), internship %>
        <% end %>
      </div>

      <div class="flex-[2] px-6 py-4">
        <div class="badge bg-primary mb-2">
          <%= internship.company.business_category.name %>
        </div>
        <div class="mb-2">
          <%= link_to internship.company.name, internship, class: 'font-bold text-xl no-underline text-slate-800 hover:underline' %>
        </div>
        <div class="mb-4">
          <%= link_to internship.title, internship, class: 'no-underline text-slate-700 mb-2 hover:underline' %></div>
        <div class="mb-2">
          <span class="py-1 px-2 bg-slate-400 text-white mr-4">実施内容</span>
          <%= internship.internship_category.name %>
        </div>
        <div>
          <span class="py-1 px-2 bg-slate-400 text-white mr-4">実施期間</span>
          <%= internship.terms ? "#{internship.terms}日間" : "-" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
