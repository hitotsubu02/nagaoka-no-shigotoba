<div>
  <% if internships.empty? %>
  <p>現在、公開中のインターンシップはありません。</p>
  <% end %>
  <div class="list-group list-group-flush mx-2">
    <% internships.each do |internship| %>
    <div class="list-group-item list-group-item-card mb-2">
      <div class="flex-1 py-4 flex items-center">
        <% if internship.thumbnail.representable? %>
        <%= link_to image_tag(internship.thumbnail.representation(resize_to_limit: [800, 800]), class: "w-100"), internship %>
        <% else %>
        <%= link_to image_tag("no_image.png", class: "w-100"), internship %>
        <% end %>
      </div>

      <div class="flex-[2] mx-0 md:px-6 py-4">
        <div class="badge bg-primary mb-2">
          <%= internship.company.business_category.name %>
        </div>
        <div class="mb-2">
          <%= link_to internship.company.name, internship, class: 'card-title' %>
        </div>
        <div class="mb-4">
          <%= link_to internship.title, internship, class: 'no-underline text-slate-700 hover:underline' %></div>
        <div class="mb-2">
          <span class="card-info-th">実施内容</span>
          <%= internship.internship_category.name %>
        </div>
        <div>
          <span class="card-info-th">実施期間</span>
          <% if internship.terms == 'term_text' %>
          <%= internship.term_text%>
          <% else %>
          <%= internship.terms %>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
