<main>
  <div class="card">
    <%= image_tag "top_sample2.jpg", class: "card-img-top img-fluid hero-img" %>
  </div>
  <div class="container">
    <section class="section">
      <p class="section-title">インターンシップ情報</p>
      <%= render 'partial/internships', internships: @internships %>
      <div class="text-center">
        <%= link_to "全て見る", internships_path, class: 'link-secondary' %>
      </div>
    </section>

    <section class="section">
      <p class="section-title">講座一覧</p>
      <%= render 'partial/courses', courses: @courses %>
      <div class="text-center">
        <%= link_to "全て見る", courses_path, class: 'link-secondary' %>
      </div>
    </section>

    <section class="section">
      <p class="section-title">お知らせ一覧</p>
      <%= render 'partial/announcements', announcements: @announcements %>
      <div class="text-center">
        <%= link_to "全て見る", announcements_path, class: 'link-secondary' %>
      </div>
    </section>
  </div>
</main>
