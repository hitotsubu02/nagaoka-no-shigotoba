<div class="my-container">
  <div class="my-5 d-flex gap-4 align-items-center">
    <h2>参加企業一覧</h2>
    <span><%= @companies.size %>件</span>
  </div>
  <div class="list-group list-group-flush">
    <% @companies.each do |company| %>
    <p class="list-group-item"><%= link_to company.name, company %></p>
    <% end %>
  </div>
</div>
