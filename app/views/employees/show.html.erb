<div class="container" style="max-width: 640px;">
  <h2 class="h2 my-5">企業ユーザ情報</h2>

  <table class="table">
    <tbody>
      <tr>
        <th><%= t 'activerecord.attributes.employee_detail.name' %></th>
        <td><%= @employee.employee_detail.name %></td>
      </tr>
      <tr>
        <th><%= t 'activerecord.attributes.company.name' %></th>
        <td><%= @employee.company.name %></td>
      </tr>
      <tr>
        <th><%= t 'activerecord.attributes.company.company_url' %></th>
        <td><%= @employee.company.company_url %></td>
      </tr>
      <tr>
        <th><%= t 'activerecord.attributes.company.phone_number' %></th>
        <td><%= @employee.company.phone_number %></td>
      </tr>
      <tr>
        <th><%= t 'activerecord.attributes.business_category.name' %></th>
        <td><%= @employee.company.business_category.name %></td>
      </tr>
      <tr>
        <th><%= t 'activerecord.attributes.company.address' %></th>
        <td><%= @employee.company.address %></td>
      </tr>
      <tr>
        <th><%= t 'activerecord.attributes.company.business_description' %></th>
        <td><%= @employee.company.business_description %></td>
      </tr>
      <tr>
        <th><%= t 'activerecord.attributes.company.number_of_employee' %></th>
        <td><%= @employee.company.number_of_employee %></td>
      </tr>
      <tr>
        <th><%= t 'activerecord.attributes.company.manager_name' %></th>
        <td><%= @employee.company.manager_name %></td>
      </tr>
      <tr>
        <th><%= t 'activerecord.attributes.company.manager_email' %></th>
        <td><%= @employee.company.manager_email %></td>
      </tr>
    </tbody>
  </table>

  <%= link_to "企業情報を編集する", edit_employee_registration_path, class: "btn btn-outline-primary my-3" %>
</div>
