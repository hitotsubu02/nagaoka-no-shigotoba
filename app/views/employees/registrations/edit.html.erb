<%= render 'partial/employee_mypage_layout' do %>
<h2 class="mb-4">ユーザ情報編集</h2>

<%= bootstrap_form_with(model: @employee, url: employee_registration_path, method: :put, local: true) do |f| %>
<%= f.email_field :email, autofocus: true %>
<%= f.password_field :password %>
<%= f.password_field :password_confirmation, required: true %>
<%= f.password_field :current_password %>

<%= f.fields_for :employee_detail, @employee.employee_detail do |f_employee_detail| %>
<%= f_employee_detail.text_field :name %>
<% end %>

<%= f.submit "変更する", class: "btn btn-primary my-3 text-white w-100", "data-turbo": false %>
<% end %>

<%= button_to 'アカウントを削除する', registration_path(resource_name), data: { confirm: t('本当に削除しますか？') }, method: :delete, class: 'btn btn-danger mt-5 text-white w-100' %>
<% end %>
