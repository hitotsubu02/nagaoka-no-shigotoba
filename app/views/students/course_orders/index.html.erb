<%= render 'partial/student_mypage_layout' do %>
<h2 class="mb-4">申し込み講座一覧</h2>

<ul class="list-group">
  <% @orders.each do |order| %>
  <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
    <%= link_to order.course.title, course_path(id: order.course.id), class: "link-primary" %>
    <%= button_to "キャンセル", student_course_order_path(id: order.id), method: :delete, data: { confirm: t('.are_you_sure') }, class: 'btn btn-danger btn-sm' %>
  </li>
  <% end %>
</ul>

<% end %>
