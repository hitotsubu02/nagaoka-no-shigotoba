<%= render 'partial/student_mypage_layout' do %>
  <h2 class="mb-4">ユーザ情報編集</h2>

  <%= bootstrap_form_with(model: @student, url: student_registration_path, method: :put, local: true) do |f| %>
  <%= f.email_field :email, autofocus: true %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>
  <%= f.password_field :current_password %>

  <%= f.fields_for :student_detail, @student.student_detail do |f_student_detail| %>
  <%= f_student_detail.text_field :name %>
  <%= f_student_detail.date_field :birthday %>
  <%= f_student_detail.text_field :school_name %>
  <%= f_student_detail.text_field :department %>
  <% end %>

  <%= f.submit "変更する", class: "btn btn-primary w-100" %>
  <% end %>

  <%= button_to 'アカウントを削除する', registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: 'btn btn-danger w-100 my-3' %>
<% end %>
