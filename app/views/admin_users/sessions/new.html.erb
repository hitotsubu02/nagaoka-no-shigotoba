<div class="my-container-sm">
  <h3 class="my-5">管理者ログイン</h3>
  <%= bootstrap_form_with(model: resource, url: session_path(resource_name), local: true) do |f| %>
  <%= f.email_field :email, autofocus: true %>
  <%= f.password_field :password %>
  <% if devise_mapping.rememberable? %>
  <div class="field">
    <%= f.check_box :remember_me %>
  </div>
  <% end %>

  <%= f.submit "ログイン", class: "btn btn-primary text-white w-100" %>
  <% end %>
</div>
